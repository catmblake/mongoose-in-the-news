<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Home</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
        aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/saved">Saved Articles</a>
            </li>
</nav>
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Headline Scraper</h1>
        <p class="lead">Get all the latest news right here</p>
        <button id="scrape">Scrape New Articles</button>
        <button id="empty">Clear Articles</button>
    </div>
</div>

<div class="row">
    {{#each article}}
    <div class="col-lg-3">
        <div class="card" style="width: 18rem;">
            {{#if this.image}}
            <img src="{{this.image}}" class="card-img-top" alt="article image">
            {{/if}}
            <div class="card-body">
                <h5 class="card-title">{{this.title}}</h5>
                {{#if this.byline}}
                <p class="card-text">{{this.byline}}</p>
                {{/if}}
                <a href="{{this.link}}" class="btn btn-primary">Read More</a>
                <button class="btn btn-primary save" data-id="{{this._id}}">Save Article</button>
            </div>
        </div>
    </div>

{{/each}}
</div>